<!DOCTYPE html>
<html>
  <head>
    <title><%= title %></title>
    <link rel="stylesheet" href="/stylesheets/style.css" />
  </head>
  <body>
    <h1><%= title %></h1>
    <p>Welcome to <%= title %></p>

    <% messages.forEach(message => { %>
    <div class="message">
      <p><%= message.text %></p>
      <p><%= message.user %></p>
      <p><%= message.added %></p>
    </div>
    <% }); %>
    <a href="/new">New message</a>
  </body>
</html>
